@{
}


<form method="post">
    <div class="form-group row">
        <label for="Name" class="col-xs-2 col-form-label">Name project</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" id="Name" name="Name" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="NameCompanyOrder" class="col-xs-2 col-form-label">Name company oredrs</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" id="NameCompanyOrder" name="NameCompanyOrder" value="@Model.NameCompanyOrder">
        </div>
    </div>
    <div class="form-group row">
        <label for="NameCompanyExecuter" class="col-xs-2 col-form-label">Name company exectuter</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" id="NameCompanyExecuter" name="NameExecuterCompany" value="@Model.NameExecuterCompany">
        </div>
    </div>
    <div class="form-group row">
        <label for="StartDate" class="col-xs-2 col-form-label">Start Date</label>
        <div class="col-xs-10">
            <input class="form-control" type="date" id="StartDate" name="StartProjectDate" value="@Model.StartProjectDate.ToString()">
        </div>
    </div>
    <div class="form-group row">
        <label for="EndDate" class="col-xs-2 col-form-label">End Date</label>
        <div class="col-xs-10">
            <input class="form-control" type="date" id="EndDate" name="EndProjectDate" value="@Model.EndProjectDate.ToString()">
        </div>
    </div>
    <div class="form-group row">
        <label for="Range" class="form-label">Priority</label>
        <div class="col-xs-10">
            <input type="range" class="form-range" min="0" max="10" id="Range" name="priority"value="@Model.priority">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 pt-md-5">
            <input type="hidden" value="@Model.Id" name="id" />
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>